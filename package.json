  "scripts": {
    "start": "NODE_PATH=./build node build/index.js",
    "start:live-watch": "nodemon src/liveApp.ts",
    "test": "jest --no-cache --runInBand --forceExit",
    "up": "docker-compose up -d",
    "up-prod": "docker-compose -f docker-compose.yml up",
    "down": "docker-compose down",
    "build": "tsc -p .",
    "build:docker": "docker-compose build",
    "dev": "nodemon src/index.ts",
    "connect": "docker exec -it sport-app-db mysql -uroot -ppassword",
    "create-database": "docker exec -i sport-app-db mysql -uroot -ppassword mysql < db.sql"
  },
